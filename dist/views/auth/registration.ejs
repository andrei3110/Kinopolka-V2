                            <% } else { %>
                                <span class="input__addon__key"><i class="fa fa-key fa-2x" aria-hidden="true"></i>
                                </span>
                                <input class="input__reg" id="Textinput" name="password" type="password" placeholder="Введите пароль">
                            <% } %>
