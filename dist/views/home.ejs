<%- include('particles/header.ejs') %>

<div class="content">

    <div class="genres__tags">
        <div class="genres__tags__wrapper">
            <% for (let i=0; i < genres.length; i++) { %>
                <form class="tags__form" action="/search/byGenre" method="post">
                    <input type="submit" class="tags__item" name="name" value="<%= genres[i].name %>">
                </form>
            <% } %>
        </div>
    </div>

    <div class="grid">

        <div class="grid__side">
            <div class="sidebar">
                <div class="sidebar__wrapper">
                    
                    <div class="menu">
                        <a href="/home"><button class="menu__button">
                                Главная
                            </button></a>
                        <a href="/categories/1"><button class="menu__button">
                                Фильмы
                            </button></a>
                        <a href="/categories/2"><button class="menu__button">
                                Сериалы
                            </button></a>
                        <a href="/categories/3"><button class="menu__button">
                                Мультфильмы
                            </button></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- CONTENT -->
        <div class="grid__content">
            <!-- SLIDER -->
            <div class="slider">
                <h3 class="slider__title">Slider</h3>
                <div class="slider__wrapper"></div>
            </div>
            <!-- SUBSCRIBE -->
            <div class="subscribe">
                <div class="subscribe__wrapper">
                    <div class="subscribe__text">
                        <font size="60px" color="white">Подписка</font>
                        <font size="50px" color="red">Kino+</font>
                        <p>
                            <font size="5px" color="white">для доступа к платным фильмам</font>
                        </p>
                        <p>
                            <font size="5px" color="#778cde">
                                <h4>30 дней бесплатно</h4>
                            </font>
                        </p>
                    </div>
                    <button class="subscribe__button">Попробовать Kino +</button>

                </div>
                <div class="subscribe__paid">
                    <div class="subscribe__container">

                        <% for (let i=0; i < items.length; i++) { %>
                        <div class="subscribe__item">
                            <div class="subscribe__item--status">подписка</div>
                                <img class="subscribe__item-image" src="/img/<%= items[i].image %>">
                            
                            <div class="subscribe__item-name">
                                <%= items[i].name %>
                            </div>
                        </div>
                        <% } %>



                    </div>
                    <button class="control-left"><i class="fa fa-chevron-left fa-2x" aria-hidden="true"></i></button>
                    <button class="control-right"><i class="fa fa-chevron-right fa-2x" aria-hidden="true"></i></button>
                </div>

            </div>

        </div>
        </div>
        <!-- FOOTER -->


            <%- include('particles/footer.ejs') %>
